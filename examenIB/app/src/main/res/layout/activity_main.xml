<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arquitecto"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_agregar_arquitecto"
        app:layout_constraintEnd_toEndOf="@+id/btn_agregar_arquitecto"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_agregar_arquitecto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <Button
        android:id="@+id/btn_agregar_arquitecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar arquitecto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />

    <ListView
        android:id="@+id/lv_list_view_arquitectos"
        android:layout_width="345dp"
        android:layout_height="378dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_agregar_arquitecto"
        app:layout_constraintStart_toStartOf="@+id/btn_agregar_arquitecto"
        app:layout_constraintTop_toBottomOf="@+id/btn_agregar_arquitecto" />

</androidx.constraintlayout.widget.ConstraintLayout>